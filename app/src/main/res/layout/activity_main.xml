<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication1.MainActivity"
    android:layout_width="match_parent">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cow"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/checkBox_Button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/pwd_button"
        android:layout_below="@+id/passwordText"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="cow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cow"
        android:layout_below="@+id/cat"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="cat"
        android:layout_height="wrap_content"
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_below="@+id/dog"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="dog"
        android:layout_height="wrap_content"
        android:id="@+id/dog"
        android:layout_width="wrap_content"
        android:checked="false"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/pwd_button"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox_Button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:text="Dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radiodog"
            android:layout_weight="1" />

        <RadioButton
            android:text="Cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioCat"
            android:layout_weight="1" />

        <RadioButton
            android:text="Cow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioCow"
            android:layout_weight="1" />

    </RadioGroup>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/radio_button" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rating_button"
        android:layout_marginEnd="11dp"
        android:id="@+id/textRating"
        android:layout_alignTop="@+id/dog" />

    <Button
        android:text="Alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pwd_button"
        android:layout_alignEnd="@+id/rating_button"
        android:id="@+id/alertButton" />

    <Button
        android:text="Open 2nd Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/openSecondActivity_button"
        android:textSize="12sp"
        android:layout_below="@+id/rating_button"
        android:layout_alignStart="@+id/rating_button"
        android:layout_marginTop="11dp" />

    <Button
        android:text="SeekBar Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_seekBar"
        android:textSize="12sp"
        android:layout_below="@+id/openSecondActivity_button"
        android:layout_alignStart="@+id/openSecondActivity_button" />

    <Button
        android:text="WebView Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_webView"
        android:textSize="12sp"
        android:layout_below="@+id/button_seekBar"
        android:layout_alignStart="@+id/button_seekBar" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:minHeight="0dp"
        android:maxHeight="40dp"
        android:layout_below="@+id/textRating"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp" />

    <Button
        android:text="Gestures Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_webView"
        android:layout_alignStart="@+id/button_webView"
        android:id="@+id/button_gestures"
        android:textSize="12sp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_button"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/passwordText" />

    <Button
        android:text="Fragments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_seekBar"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_fragments"
        android:textSize="12sp"
        android:minWidth="80dp" />

    <Button
        android:text="AutoComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_autoComplete"
        android:layout_above="@+id/button_webView"
        android:layout_centerHorizontal="true"
        android:textSize="10sp" />

    <Button
        android:text="TimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_timePicker"
        android:layout_above="@+id/button_gestures"
        android:textSize="10sp" />

</RelativeLayout>
